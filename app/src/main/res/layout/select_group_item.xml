<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/SGI_name"
        android:padding="15dp"
        android:textSize="15dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="그룹명"
        app:layout_constraintEnd_toStartOf="@id/SGI_check"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <CheckBox
        android:padding="10dp"
        android:id="@+id/SGI_check"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/SGI_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/SGI_name" />

    <View
        android:id="@+id/SGI_view"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:background="@color/gray3"
        app:layout_constraintTop_toBottomOf="@+id/SGI_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
