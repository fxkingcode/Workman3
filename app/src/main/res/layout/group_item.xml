<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginStart="10dp"
        android:background="@drawable/circle_shape"
        android:id="@+id/GI_maker"
        app:layout_constraintBottom_toBottomOf="@+id/GI_name"
        app:layout_constraintTop_toTopOf="@+id/GI_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

    <TextView
        android:paddingStart="5dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/GI_name"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:textSize="15sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="그룹명"
        app:layout_constraintEnd_toStartOf="@id/GI_personnel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/GI_maker"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:textSize="15sp"
        android:text="99명"
        android:padding="15dp"
        android:id="@+id/GI_personnel"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/GI_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/GI_name" />

    <View
        android:id="@+id/GI_view"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:background="@color/gray3"
        app:layout_constraintTop_toBottomOf="@+id/GI_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>