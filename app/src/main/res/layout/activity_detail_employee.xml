<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Detail_Employee.DetailEmployeeActivity">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="직원"
        app:layout_constraintBottom_toBottomOf="@+id/view" android:id="@+id/textView3"/>

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/DE_modify"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@null"
        android:text="수정"
        android:textColor="@color/blue"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:background="@drawable/ic_chevron_left_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="55dp"
        android:layout_height="55dp"/>

    <View
        android:layout_marginTop="55dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp" android:id="@+id/view"/>

    <TextView
        android:id="@+id/DE_nameText"
        android:text="직원 이름"
        android:textSize="20sp"
        android:padding="10dp"
        android:gravity="start|center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="60dp"/>

    <TextView
        android:id="@+id/DE_name"
        android:text="홍길동"
        android:textSize="20sp"
        android:padding="10dp"
        android:gravity="start|center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/DE_nameText"
        app:layout_constraintBottom_toBottomOf="@id/DE_nameText"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>

    <View
        android:background="@color/gray3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DE_nameText"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" android:id="@+id/view1"/>

    <TextView
        android:id="@+id/DE_positionText"
        android:text="직책"
        android:textSize="20sp"
        android:padding="10dp"
        android:gravity="start|center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="60dp"/>

    <TextView
        android:id="@+id/DE_position"
        android:text="중간 관리자"
        android:textSize="20sp"
        android:padding="10dp"
        android:gravity="start|center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/DE_positionText"
        app:layout_constraintBottom_toBottomOf="@id/DE_positionText"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>

    <View
        android:background="@color/gray3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DE_positionText"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" android:id="@+id/view2"/>

    <TextView
        android:id="@+id/DE_groupText"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="start|center"
        android:padding="10dp"
        android:text="그룹"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/DE_group"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/DE_group" />

    <TextView
        android:layout_marginStart="40dp"
        android:minHeight="60dp"
        android:id="@+id/DE_group"
        android:textSize="20sp"
        android:padding="10dp"
        android:gravity="end|center"
        app:layout_constraintStart_toEndOf="@+id/DE_groupText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <View
        android:background="@color/gray3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DE_group"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" android:id="@+id/view3"/>

    <TextView
        android:id="@+id/DE_emailText"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="start|center"
        android:padding="10dp"
        android:text="이메일"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/DE_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/DE_email" />

    <TextView
        android:layout_marginStart="40dp"
        android:minHeight="60dp"
        android:id="@+id/DE_email"
        android:text="Workman12345@gmail.com"
        android:textSize="20sp"
        android:padding="10dp"
        android:gravity="end|center"
        app:layout_constraintStart_toEndOf="@+id/DE_emailText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <View
        android:background="@color/gray3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DE_email"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" android:id="@+id/view4"/>

    <TextView
        android:id="@+id/DE_phoneText"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="start|center"
        android:padding="10dp"
        android:text="전화번호"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/DE_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/DE_phone" />

    <TextView
        android:layout_marginStart="40dp"
        android:minHeight="60dp"
        android:id="@+id/DE_phone"
        android:text="010-1234-5678"
        android:textSize="20sp"
        android:padding="10dp"
        android:gravity="end|center"
        app:layout_constraintStart_toEndOf="@+id/DE_phoneText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <View
        android:background="@color/gray3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DE_phone"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" android:id="@+id/view5"/>

    <TextView
        android:id="@+id/DE_stateText"
        android:text="직원 상태"
        android:textSize="20sp"
        android:padding="10dp"
        android:gravity="start|center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view5"
        android:layout_width="wrap_content"
        android:layout_height="60dp"/>

    <TextView
        android:id="@+id/DE_state"
        android:textColor="@color/green"
        android:text="합류"
        android:textSize="20sp"
        android:padding="10dp"
        android:gravity="start|center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/DE_stateText"
        app:layout_constraintBottom_toBottomOf="@id/DE_stateText"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>

    <View
        android:background="@color/gray3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DE_stateText"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" android:id="@+id/view6"/>

    <TextView
        android:id="@+id/DE_memoText"
        android:text="메모"
        android:textSize="20sp"
        android:padding="10dp"
        android:gravity="start|center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/DE_memo"
        android:hint="직원 메모사항"
        android:textSize="15sp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/DE_memoText"
        android:layout_width="match_parent"
        android:layout_height="130dp"/>

    <View
        android:background="@color/gray3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DE_memo"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" android:id="@+id/view9"/>

    <ProgressBar
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:theme="@style/Widget.AppCompat.ProgressBar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DE_progressBar"/>
</androidx.constraintlayout.widget.ConstraintLayout>